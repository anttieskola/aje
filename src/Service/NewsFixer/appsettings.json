{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http": "Warning"
    }
  },
  "ConnectionStrings": {
    "NewsFixer": "Host=/run/postgresql;Database=newsfixer;"
  },
  "RedisConfiguration": {
    "Host": "apollo:6379"
  },
