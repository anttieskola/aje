{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MChatter",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/util/MChatter/bin/Debug/net7.0/AJE.MChatter",
            "args": [],
            "cwd": "${workspaceFolder}/util/MChatter",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": "News",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Service/News/bin/Debug/net7.0/AJE.Service.News",
            "args": [],
            "cwd": "${workspaceFolder}/src/Service/News",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "NewsAnalyzer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Service/NewsAnalyzer/bin/Debug/net7.0/AJE.Service.NewsAnalyzer",
            "args": [],
            "cwd": "${workspaceFolder}/src/Service/NewsAnalyzer",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md.
            "name": "Ui.Public",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/Ui/Public/bin/Debug/net7.0/AJE.Ui.Public.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Ui/Public",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}